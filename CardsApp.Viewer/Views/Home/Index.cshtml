<!DOCTYPE html>
<html data-ng-app="app">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title</title>
	<link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.6.0/pure-min.css">
	@Styles.Render("~/Content/css")

	<script src="~/Scripts/angular.js"></script>
	<script src="~/Scripts/app/app.js"></script>
	<script src="~/Scripts/app/home-controller.js"></script>
</head>
<body>
	<nav>navigation</nav>
	<div class="pure-g" data-ng-controller="homeController">
		<aside class="pure-u-1-3" style="background-color: #FF0000"></aside>
		<main class="pure-u-1-3" style="background-color: #00FF00">

			<ul>
				<li data-ng-repeat="c in cards">{{ c }}</li>
			</ul>

		</main>
		<aside class="pure-u-1-3" style="background-color: #FF0000"></aside>
	</div>
	<footer>footer</footer>
</body>
</html>